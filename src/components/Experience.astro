---
const experiences = [
  {
    title: "Cryptocurrency Specialist",
    company: "Politie Nederland",
    period: "Mar 2025 - Present",
    current: true,
    description: "Providing expertise in blockchain analysis, digital asset investigations, and cryptocurrency tracking. Tracing illicit transactions, analyzing on-chain activity, supporting investigative teams with actionable intelligence, and advising on secure handling of digital assets.",
    skills: ["Cryptocurrency Analysis", "Blockchain Forensics", "Digital Asset Tracing", "Investigative Tooling"]
  },
  {
    title: "Data Engineer",
    company: "Nederlands Lucht- en Ruimtevaartcentrum (NLR)",
    period: "Mar 2024 - Mar 2025",
    current: false,
    description: "Worked on cutting-edge projects at the intersection of cybersecurity, IoT, supply chain, and blockchain technologies. Led the design and development of a proof-of-concept platform for managing Digital Product Passports.",
    skills: ["IoT Integration", "Blockchain Architecture", "Cybersecurity", "Supply Chain Tracking", "POC Development"]
  },
  {
    title: "Data Engineer",
    company: "Boval Assurantien B.V.",
    period: "Sep 2023 - Feb 2024",
    current: false,
    description: "Rebuilt a large-scale application responsible for processing daily high-volume data batches. Designed fault-tolerant systems with periodic state persistence to safely recover long-running jobs.",
    skills: ["System Design", "Fault-Tolerant Architecture", "Batch Processing", "Task Scheduling", "Performance Optimization"]
  },
  {
    title: "Blockchain Developer",
    company: "Dealblock Labs",
    period: "Sep 2019 - Dec 2023",
    current: false,
    description: "Contributed to the design, development, and deployment of blockchain-based solutions, including smart contract implementation, blockchain architecture design, and integration with existing systems.",
    skills: ["Smart Contracts", "Blockchain Architecture", "dApp Integration", "Backend Integration"]
  }
];
---

<section id="experience" class="section experience">
  <div class="container">
    <h2 class="section-title">Experience</h2>
    <div class="timeline">
      {experiences.map((exp, index) => (
        <article class="timeline-item" style={`animation-delay: ${index * 0.1}s`}>
          <div class="timeline-marker">
            <div class={`marker-dot ${exp.current ? 'current' : ''}`}></div>
            <div class="marker-line"></div>
          </div>
          <div class="timeline-content">
            <div class="timeline-header">
              <div>
                <h3 class="timeline-title">{exp.title}</h3>
                <p class="timeline-company">{exp.company}</p>
              </div>
              <span class={`timeline-period ${exp.current ? 'current' : ''}`}>
                {exp.period}
              </span>
            </div>
            <p class="timeline-description">{exp.description}</p>
            <div class="timeline-skills">
              {exp.skills.map(skill => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--bg-primary);
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .timeline-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-6);
    animation: fadeIn 0.6s ease forwards;
    opacity: 0;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: var(--space-1);
  }

  .marker-dot {
    width: 12px;
    height: 12px;
    background: var(--bg-tertiary);
    border: 2px solid var(--border);
    border-radius: 50%;
    position: relative;
    z-index: 1;
    transition: all var(--transition-fast);
  }

  .marker-dot.current {
    background: var(--accent);
    border-color: var(--accent);
    box-shadow: 0 0 0 4px var(--accent-muted);
  }

  .timeline-item:hover .marker-dot {
    border-color: var(--accent);
  }

  .marker-line {
    width: 2px;
    flex: 1;
    background: var(--border);
    margin-top: var(--space-2);
  }

  .timeline-item:last-child .marker-line {
    display: none;
  }

  .timeline-content {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    transition: border-color var(--transition-fast);
  }

  .timeline-item:hover .timeline-content {
    border-color: var(--border-hover);
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .timeline-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }

  .timeline-company {
    font-size: var(--text-sm);
    color: var(--accent);
    font-weight: 500;
  }

  .timeline-period {
    font-size: var(--text-sm);
    color: var(--text-muted);
    white-space: nowrap;
    padding: var(--space-1) var(--space-3);
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
  }

  .timeline-period.current {
    background: var(--accent-muted);
    color: var(--accent);
  }

  .timeline-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-4);
  }

  .timeline-skills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .skill-tag {
    font-size: var(--text-xs);
    color: var(--text-secondary);
    padding: var(--space-1) var(--space-2);
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .skill-tag:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .timeline-header {
      flex-direction: column;
      gap: var(--space-2);
    }

    .timeline-marker {
      display: none;
    }

    .timeline-item {
      grid-template-columns: 1fr;
    }
  }
</style>
